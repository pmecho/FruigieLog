
    <LinearLayout android:id="@+id/LinearLayout1" xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <LinearLayout android:id="@+id/linearLayout2" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <Button 
            	android:text="-1 Day" 
            	android:id="@+id/decDay" 
            	android:layout_width="wrap_content" 
            	android:layout_height="wrap_content"
            	android:onClick="changeDate">
           	</Button>
            <TextView 
            	android:text="" 
            	android:id="@+id/date" 
            	android:layout_width="wrap_content" 
            	android:layout_height="wrap_content">
           	</TextView>
            <Button 
            	android:text="+1 Day" 
            	android:id="@+id/incDay" 
            	android:layout_width="wrap_content" 
            	android:layout_height="wrap_content"
            	android:onClick="changeDate">
           	</Button>
        
        </LinearLayout>
        <LinearLayout android:id="@+id/linearLayout2" android:layout_width="wrap_content" android:layout_height="wrap_content">
	        <RadioGroup android:id="@+id/servingRadioGroup" android:layout_height="wrap_content" android:layout_width="wrap_content" android:orientation="horizontal">
	            <TextView android:text="Serving Size: " android:textAppearance="?android:attr/textAppearanceMedium" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/textView1" android:layout_marginLeft="10dp"></TextView>
	            <RadioButton android:id="@+id/fullRadio" 
		            android:layout_height="wrap_content" 
		            android:text="Full" 
		            android:layout_width="wrap_content" 
		            android:checked="true" 
		            android:layout_marginLeft="5dp" 
		            android:layout_marginRight="5dp"
		            android:onClick="changeToFullServing">
	            </RadioButton>
	            <RadioButton android:id="@+id/halfRadio" 
		            android:layout_height="wrap_content" 
		            android:text="Half" 
		            android:layout_width="wrap_content" 
		            android:layout_marginLeft="5dp" 
		            android:layout_marginRight="5dp"
		            android:onClick="changeToHalfServing">
	            </RadioButton>
	        </RadioGroup>
        </LinearLayout>
        <RelativeLayout android:id="@+id/RelativeLayout1" android:layout_height="100dp" android:baselineAligned="true" android:layout_width="wrap_content" android:gravity="left">
            <ImageView android:src="@drawable/banana" 
            			 android:id="@+id/banana"
            			 android:layout_marginLeft="10dp"
            			 android:layout_marginRight="10dp"
            			 android:layout_height="100dp"
            			 android:layout_width="75dp"
            			 android:layout_centerVertical="true" 
            			 android:layout_alignParentLeft="true"></ImageView>
            <ImageButton android:src="@drawable/minus_button" 
            	android:layout_height="wrap_content" 
            	android:background="@null"
            	android:layout_toRightOf="@id/banana" 
            	android:id="@+id/decFruit"
            	android:onClick="decrementPortion"
            	android:layout_weight="1"
            	android:layout_centerVertical="true"
            	android:layout_width="wrap_content">
           	</ImageButton>
            <TextView android:layout_toRightOf="@id/decFruit"  android:text="0.0" 
            	android:textAppearance="?android:attr/textAppearanceLarge" 
            	android:layout_height="wrap_content" 
            	android:id="@+id/currentFruit"
            	android:layout_weight="1"
            	android:layout_width="wrap_content"
            	android:layout_centerVertical="true"
            	android:layout_marginLeft="15dp"
            	android:layout_marginRight="15dp">
           	</TextView>
            <ImageButton android:src="@drawable/plus_button" 
            	android:layout_height="wrap_content" 
            	android:id="@+id/incFruit"
				android:layout_toRightOf="@id/currentFruit"
            	android:background="@null"
            	android:onClick="incrementPortion"
            	android:layout_weight="1"
            	android:layout_width="wrap_content"
            	android:layout_centerVertical="true">
           	</ImageButton>
        </RelativeLayout>
        
		<RelativeLayout android:id="@+id/RelativeLayout1" android:layout_height="100dp" android:baselineAligned="true" android:layout_width="wrap_content" android:gravity="left">
            <ImageView android:src="@drawable/carrot" 
            			 android:id="@+id/carrot"
            			 android:layout_marginLeft="10dp"
            			 android:layout_marginRight="10dp"
            			 android:layout_height="100dp"
            			 android:layout_width="75dp"
            			 android:layout_centerVertical="true" 
            			 android:layout_alignParentLeft="true"></ImageView>
            <ImageButton android:src="@drawable/minus_button" 
            	android:layout_height="wrap_content" 
            	android:background="@null"
            	android:layout_toRightOf="@id/carrot" 
            	android:id="@+id/decVeggie"
            	android:onClick="decrementPortion"
            	android:layout_weight="1"
            	android:layout_centerVertical="true"
            	android:layout_width="wrap_content">
           	</ImageButton>
            <TextView android:layout_toRightOf="@id/decVeggie"  android:text="0.0" 
            	android:textAppearance="?android:attr/textAppearanceLarge" 
            	android:layout_height="wrap_content" 
            	android:id="@+id/currentVeggie"
            	android:layout_weight="1"
            	android:layout_width="wrap_content"
            	android:layout_centerVertical="true"
            	android:layout_marginLeft="15dp"
            	android:layout_marginRight="15dp">
           	</TextView>
            <ImageButton android:src="@drawable/plus_button" 
            	android:layout_height="wrap_content" 
            	android:id="@+id/incVeggie"
				android:layout_toRightOf="@id/currentVeggie"
            	android:background="@null"
            	android:onClick="incrementPortion"
            	android:layout_weight="1"
            	android:layout_width="wrap_content"
            	android:layout_centerVertical="true">
           	</ImageButton>
        </RelativeLayout>

    </LinearLayout>
